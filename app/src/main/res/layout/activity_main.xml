<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Go to Login module"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:onClick="onClick"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:typeface="normal"
            android:textAllCaps="false"/>

    <Button
            android:text="同步调用A组件(页面跳转)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btStartA"
            android:onClick="onClick"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:typeface="normal"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button"/>

    <Button
            android:text="异步调用A组件(页面跳转)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btStartAAysnc"
            android:onClick="onClick"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:typeface="normal"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btStartA"/>

    <Button
            android:text="同步调用A组件(获取数据)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btGetA"
            android:onClick="onClick"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:typeface="normal"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btStartAAysnc"/>

    <Button
            android:text="异步调用A组件(获取数据)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btGetAAysnc"
            android:onClick="onClick"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:typeface="normal"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btGetA"/>

    <Button
            android:text="异步调用A组件(慢请求3s)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btGetAAysnc3"
            android:onClick="onClick"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:typeface="normal"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/btGetAAysnc"
            android:layout_marginTop="8dp"/>


    <Button
            android:text="异步调A组件(模拟登录)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btLogin"
            android:onClick="onClick"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:typeface="normal"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btGetAAysnc3"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cc组件化Demo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textView"
            app:layout_constraintHorizontal_bias="0.952"
            app:layout_constraintVertical_bias="0.977"
            android:textSize="16sp"/>

</android.support.constraint.ConstraintLayout>